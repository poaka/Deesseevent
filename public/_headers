  Permissions-Policy: camera=(), microphone=(), geolocation=()
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://fonts.googleapis.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: blob: https:; connect-src 'self' https://ovzndmlzwxrqclxahqfm.supabase.co https://*.supabase.co; frame-ancestors 'none';
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

